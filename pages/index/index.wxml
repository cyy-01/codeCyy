<view class="container">
<view style="font-size: larger; font-weight: 700;margin-bottom: 20px;">个人信息</view>
  <view class="card">
    <view class="info-item">
      <text class="info-label">姓名:</text>
      <text class="info-content">{{name}}</text>
    </view>
    <view class="info-item">
      <text class="info-label">年龄:</text>
      <text class="info-content">{{age}}</text>
    </view>
    <view class="info-item">
      <text class="info-label">QQ号:</text>
      <text class="info-content">{{qq}}</text>
    </view>
    <view class="info-item">
      <text class="info-label">微信号:</text>
      <text class="info-content">{{wechat}}</text>
    </view>
    <view class="info-item">
      <text class="info-label">性别:</text>
      <text class="info-content">{{gender}}</text>
    </view>
    <view class="info-item">
      <text class="info-label">学历:</text>
      <text class="info-content">{{education}}</text>
    </view>
    <view class="info-item">
      <text class="info-label">学校:</text>
      <text class="info-content">{{school}}</text>
    </view>
  </view>
</view>

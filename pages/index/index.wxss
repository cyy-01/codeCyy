.container {
  display: flex;
  justify-content: center;
  padding: 20px;
  background-color: #f5f5f5; /* 背景颜色 */
}

.card {
  width: 90%;
  background-color: white;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* 阴影效果 */
  padding: 20px;
  border-radius: 10px; /* 圆角边框 */
}

.info-item {
  display: flex;
  align-items: center;
  margin-bottom: 15px;
}

.info-label {
  width: 100px;
  color: #333;
  font-weight: bold;
}

.info-content {
  flex: 1;
  color: #666;
}

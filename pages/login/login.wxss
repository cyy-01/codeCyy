.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
}

.input-container {
  margin-bottom: 20px;
}

.input-box {
  width: 300px;
  height: 40px;
  padding: 10px;
  border: 1px solid #ddd;
  border-radius: 4px;
}

.login-button {
  width: 320px;
  height: 40px;
  background-color: #1aad19;
  color: white;
  border: none;
  border-radius: 4px;
}
